@using System.Text.Json
@model ShopManagement.Application.Contracts.Product.EditProduct
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش محصول: @Model.Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Code" class="control-label">کد</label>
                    <input type="text" class="form-control" asp-for="Code">
                    <span asp-validation-for="Code" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">گروه محصول</label>
                    <select class="form-control" asp-for="CategoryId"
                            asp-items='new SelectList(Model.Categories, "Id", "Name")'>
                        <option value="0">گروه محصول</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="error"></span>
                </div>
            </div>
        </div>
        <hr />
        <h5>ویژگی‌های محصول</h5>
        <div id="product-attributes">
            @if (Model.AvailableAttributes != null && Model.AvailableAttributes.Any())
            {
                @for (int i = 0; i < Model.AvailableAttributes.Count; i++)
                {
                    var attr = Model.AvailableAttributes[i];
                    var existingValue = Model.AttributeValues?.FirstOrDefault(v => v.AttributeDefinitionId == attr.Id)?.Value;

                    <div class="form-group mb-3">
                        <label class="control-label">@attr.Name</label>

                        @{
                            List<string> values = null;
                            if (!string.IsNullOrWhiteSpace(attr.AllowedValuesJson))
                            {
                                try
                                {
                                    values = JsonSerializer.Deserialize<List<string>>(attr.AllowedValuesJson);
                                }
                                catch
                                {
                                    var s = attr.AllowedValuesJson.Trim('[', ']', ' ', '"', '\'');
                                    values = s.Split(new[] { ',', ';' }, StringSplitOptions.RemoveEmptyEntries)
                                              .Select(x => x.Trim().Trim('"', '\'')).ToList();
                                }
                            }

                            if (values != null && values.Any())
                            {
                                <select class="form-control" name="AttributeValues[@i].Value">
                                    <option value="">انتخاب کنید...</option>
                                    @foreach (var v in values)
                                    {
                                        <option value="@v" selected="@(v == existingValue ? "selected" : null)">@v</option>
                                    }
                                </select>
                            }
                            else
                            {
                                switch ((attr.DataType ?? "string").ToLower())
                                {
                                    case "number":
                                        <input type="number" class="form-control" name="AttributeValues[@i].Value" value="@existingValue" />
                                        break;
                                    case "boolean":
                                        <select class="form-control" name="AttributeValues[@i].Value">
                                            <option value="">انتخاب کنید...</option>
                                            <option value="true" selected="@(existingValue == "true" ? "selected" : null)">بله</option>
                                            <option value="false" selected="@(existingValue == "false" ? "selected" : null)">خیر</option>
                                        </select>
                                        break;
                                    default:
                                        <input type="text" class="form-control" name="AttributeValues[@i].Value" value="@existingValue" />
                                        break;
                                }
                            }
                        }

                        <input type="hidden" name="AttributeValues[@i].AttributeDefinitionId" value="@attr.Id" />
                    </div>
                }
            }
            else
            {
                <p class="text-muted">هیچ ویژگی‌ای تعریف نشده است.</p>
            }
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Picture" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="Picture" accept="image/*">
                    <span asp-validation-for="Picture" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitle" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    <span asp-validation-for="PictureTitle" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="ShortDescription" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="ShortDescription" onchange="fillField('ShortDescription', 'MetaDescription')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="ShortDescription" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Keywords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="Keywords">
                    <span asp-validation-for="Keywords" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>


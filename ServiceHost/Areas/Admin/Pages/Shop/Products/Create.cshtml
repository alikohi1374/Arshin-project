@model ShopManagement.Application.Contracts.Product.CreateProduct
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد محصول جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <!-- ✅ فیلدهای اصلی محصول -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name">نام</label>
                    <input asp-for="Name" class="form-control" onchange="makeSlug('Name', 'Slug')" />
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Code">کد</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="error"></span>
                </div>
            </div>
        </div>

        <!-- ✅ انتخاب دسته‌بندی -->
        <div class="form-group">
            <label asp-for="CategoryId">گروه محصول</label>
            <select asp-for="CategoryId" asp-items='new SelectList(Model.Categories, "Id", "Name")' class="form-control">
                <option value="0">انتخاب کنید...</option>
            </select>
            <span asp-validation-for="CategoryId" class="error"></span>
        </div>

        <!-- ✅ ویژگی‌های پویا -->
        @using System.Text.Json

        <hr />
        <h5>ویژگی‌های محصول</h5>

        <div id="product-attributes">
            @if (Model.AvailableAttributes != null && Model.AvailableAttributes.Any())
            {
                @for (int i = 0; i < Model.AvailableAttributes.Count; i++)
                {
                    var attr = Model.AvailableAttributes[i];
                    <div class="form-group mb-3">
                        <label class="control-label">@attr.Name</label>

                        @{
                            List<string> values = null;
                            if (!string.IsNullOrWhiteSpace(attr.AllowedValuesJson))
                            {
                                try
                                {
                                    values = JsonSerializer.Deserialize<List<string>>(attr.AllowedValuesJson);
                                }
                                catch
                                {
                                    // fallback: تلاش برای پارس ساده اگر JSON معتبر نبود (مثلاً "a,b,c" یا "['a','b']")
                                    try
                                    {
                                        var s = attr.AllowedValuesJson.Trim();
                                        s = s.Trim('[', ']', ' ', '"', '\'');
                                        values = s.Split(new[] { ',', ';' }, StringSplitOptions.RemoveEmptyEntries)
                                                  .Select(x => x.Trim().Trim('"', '\'')).ToList();
                                    }
                                    catch
                                    {
                                        values = null;
                                    }
                                }
                            }

                            if (values != null && values.Any())
                            {
                                <select class="form-control" name="AttributeValues[@i].Value">
                                    <option value="">انتخاب کنید...</option>
                                    @foreach (var v in values)
                                    {
                                        <option value="@v">@v</option>
                                    }
                                </select>
                            }
                            else
                            {
                                switch ((attr.DataType ?? "string").ToLower())
                                {
                                    case "number":
                                        <input type="number" class="form-control" name="AttributeValues[@i].Value" />
                                        break;
                                    case "boolean":
                                        <select class="form-control" name="AttributeValues[@i].Value">
                                            <option value="">انتخاب کنید...</option>
                                            <option value="true">بله</option>
                                            <option value="false">خیر</option>
                                        </select>
                                        break;
                                    default:
                                        <input type="text" class="form-control" name="AttributeValues[@i].Value" />
                                        break;
                                }
                            }
                        }

                        <input type="hidden" name="AttributeValues[@i].AttributeDefinitionId" value="@attr.Id" />
                    </div>
                }
            }
            else
            {
                <p class="text-muted">هیچ ویژگی‌ای تعریف نشده است.</p>
            }
        </div>

        <!-- ✅ بقیه فیلدهای توضیحات -->
        <div class="form-group">
            <label asp-for="ShortDescription">توضیح کوتاه</label>
            <textarea asp-for="ShortDescription" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Description">توضیحات کامل</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Slug">اسلاگ</label>
            <input asp-for="Slug" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Keywords">کلمات کلیدی</label>
            <input asp-for="Keywords" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="MetaDescription">توضیحات متا</label>
            <textarea asp-for="MetaDescription" class="form-control"></textarea>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info">ایجاد</button>
    </div>
</form>

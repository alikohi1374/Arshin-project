@model List<_01_ArshinQuery.Contracts.ProductCategory.ProductCategoryQueryModel>
@foreach (var category in Model)
{
    foreach (var product in category.Products)
    {
        <div class="col-lg-1-5 col-md-4 col-12 col-sm-6" style="margin-bottom: 20px">
            <div class="product-cart-wrap">
                <div class="product-img-action-wrap">
                    <div class="product-img product-img-zoom">
                        <a asp-page="Product" asp-route-id="@product.Slug">
                            <img class="default-img" src="~/ProductPictures/@product.Picture" alt="@product.Name">
                            <img class="hover-img" src="~/ProductPictures/@product.Picture" alt="@product.Name">
                        </a>
                    </div>
                    <div class="product-action-1">
                        <a aria-label="مشاهده سریع" class="action-btn small hover-up" data-bs-toggle="modal" data-bs-target="#quickViewModal">
                            <i class="fi-rs-eye"></i>
                        </a>
                        <a aria-label="علاقه مندی" class="action-btn small hover-up" href="shop-wishlist.html">
                            <i class="fi-rs-heart"></i>
                        </a>
                        <a aria-label="مقایسه" class="action-btn small hover-up" href="shop-compare.html">
                            <i class="fi-rs-shuffle"></i>
                        </a>
                    </div>

                    @if (product.HasDiscount)
                    {
                        <div class="product-badges product-badges-position product-badges-mrg">
                            <span class="hot">تخفیف @product.DiscountRate%</span>
                        </div>
                    }
                </div>

                <div class="product-content-wrap">
                    <div class="product-category">
                        <a asp-page="ProductCategory" asp-route-id="@category.Slug">@category.Name</a>
                    </div>
                    <h2>
                        <a asp-page="Product" asp-route-id="@product.Slug">@product.Name</a>
                    </h2>
                   

                    <div class="product-price mt-10">
                        @if (product.HasDiscount)
                        {
                            <span>  @product.PriceWithDiscount </span> 
                            <span class="old-price">@product.Price </span>
                        }
                        else
                        {
                            <span>@product.Price تومان</span>
                        }
                    </div>

                    <div class="sold mt-15 mb-15">
                        <div class="progress mb-5">
                            @{
                                var soldPercent = 10> 0
                                    ? (int)((double)50 / 100* 100)
                                    : 0;
                            }
                            <div class="progress-bar" role="progressbar" style="width:@soldPercent%" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <span class="font-xs text-heading">فروش: 100/400</span>
                    </div>

                    <a href="shop-cart.html" class="btn w-100 hover-up">
                        <i class="fi-rs-shopping-cart mr-5"></i>افزودن به سبدخرید
                    </a>
                </div>
            </div>
        </div>
    }
}
